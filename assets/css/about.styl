$h_about = calc(100vh - 103px)

#about
	display table
	height $h_about
		
	.margen
		position relative
		display table
		height calc(100vh - 103px - 160px)
		max-height 500px
		padding 30px
		margin-top 80px
		margin-bottom 80px
		border 2px solid white;
		min-width 280px
		width 100%
		+for_breakpoint(mobile)
			padding 15px
			height calc(100vh - 58px - 160px)
		+for_breakpoint(tablet)
			padding 15px
			height calc(100vh - 58px - 160px)
		+for_breakpoint(large)
			margin-top 120px
			margin-bottom 80px
			height calc(100vh - 103px - 180px)
		.text-about
			margin-top 20px
			display table-cell
			vertical-align middle
			text-align center
			font-size 1.2em
			letter-spacing 1px
		.q-1,.q-2,.q-3,.q-4
			position absolute
			border 2px solid white
			height 60px
			width 60px
			+for_breakpoint(mobile)
				height 30px
				width 30px
			+for_breakpoint(tablet)
				height 30px
				width 30px
		.q-1
			top -30px
			left -30px
			+for_breakpoint(mobile)
				top -15px
				left -15px
			+for_breakpoint(tablet)
				top -15px
				left -15px
		.q-2
			top -30px
			right -30px
			+for_breakpoint(mobile)
				top -15px
				right -15px
			+for_breakpoint(tablet)
				top -15px
				right -15px
		.q-3
			bottom -30px
			left -30px
			+for_breakpoint(mobile)
				bottom  -15px
				left -15px
			+for_breakpoint(tablet)
				bottom -15px
				left -15px
		.q-4
			bottom -30px
			right -30px
			+for_breakpoint(mobile)
				bottom  -15px
				right -15px
			+for_breakpoint(tablet)
				bottom -15px
				right -15px
		
	