$ventana = calc(100vh - 103px)
#contact
	.llegar
		display: none
		a
			text-decoration: none
			color: white
			&:hover
				text-decoration: underline
		+for_breakpoint(mobile)
			display: table
			margin: 15px auto
	.cont-contact
		height: $ventana
		&:after
			clear: both
		> div
			min-height: 200px
			float: left
			width: 50%
		.left
			background-color: #fff
			height: 100%
			#map
				position: relative
				width: 100%
				height: 100%
			#line
				margin-left: 46.6%
				position: absolute
				z-index: 888
				height: $ventana
				width: 10px;  
				background: #c2ad63;
				-webkit-transform: skew(-8deg);
				-moz-transform: skew(-8deg);
				-ms-transform: skew(-8deg);
				-o-transform: skew(-8deg);
				transform: skew(-8deg);
			#line2
				margin-left: 46.7%
				position: absolute
				z-index: 887
				height: $ventana
				width: 100px; 
				background: #000;
				-webkit-transform: skew(-8deg);
				-moz-transform: skew(-8deg);
				-ms-transform: skew(-8deg);
				-o-transform: skew(-8deg);
				transform: skew(-8deg);
				
		.right
			height: 100%
			color: #fff
			font: italic 15px 'Libre Baskerville'
			// right:1px
			// padding-left: 15%
			#datetimepicker1
				// color: black
				width: 294px
				-webkit-border-radius: 6px
				border-radius: 6px
				margin-top: 5px
				border: 1px solid #b7b7b7
				input 
					font: italic 16px "Libre Baskerville", serif
					background: rgba(5,4,4,1)
					padding: 15px 20px 10px 20px
					color: rgba(255,255,255,1)
				.input-group-addon
					background: none
					color: #888787
				.dropdown-menu
					background-color: #000
					border: 2px solid #b7b7b7
					button
						background-color: #000
						border-color: #b7b7b7
						&:hover
							background-color: #b7b7b7
					a
						color: white
					span
						&:hover
							background-color: #b7b7b7
						&.active
							background-color: #b7b7b7
					th
						&:hover
							background-color: #b7b7b7
						&.active
							background-color: #b7b7b7
					.datepicker-days
						td
							&:hover
								background-color: #b7b7b7
								color: white
							&.active
								background-color: #b7b7b7
			#centrado
				display: table
				margin: 20px auto
				// background-color: red
				.input-css
					display: inline-block
					width: 250px
					// direction: rtl
					-webkit-box-sizing: content-box
					-moz-box-sizing: content-box
					box-sizing: content-box
					margin-top: 5px
					padding: 15px 20px 10px 20px
					border: 2px solid #b7b7b7
					-webkit-border-radius: 6px
					border-radius: 6px
					font: italic 16px "Libre Baskerville", serif
					color: rgba(255,255,255,1)
					// text-align: right
					-o-text-overflow: clip
					text-overflow: clip
					background: rgba(5,4,4,1)
					-webkit-box-shadow: 2px 2px 2px 0 rgba(0,0,0,0.2) inset
					box-shadow: 2px 2px 2px 0 rgba(0,0,0,0.2) inset
					-webkit-transition: all 200ms cubic-bezier(0.42, 0, 0.58, 1)
					-moz-transition: all 200ms cubic-bezier(0.42, 0, 0.58, 1)
					-o-transition: all 200ms cubic-bezier(0.42, 0, 0.58, 1)
					transition: all 200ms cubic-bezier(0.42, 0, 0.58, 1)	 
					&::-webkit-input-placeholder
						color: #8B8A8A
					&:-moz-placeholder
						color: #8B8A8A
					&::-moz-placeholder
						color: #8B8A8A
					&:-ms-input-placeholder
						color: #8B8A8A
				textarea
					resize: none
				#boton
					width: 294px
					background-color: rgba(0, 0, 0, .75)
					border-radius: 6px
					color: white
					// float: right
					font-size: 16px
					padding: 6px 10px
					// border: 2px solid #b7b7b7 
					&:hover
						background-color: #b7b7b7
						color: black
				
			
			
