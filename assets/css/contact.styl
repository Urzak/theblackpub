$ventana = calc(100vh - 103px)
#contact
	.input-css
		display: inline-block
		-webkit-box-sizing: content-box
		-moz-box-sizing: content-box
		box-sizing: content-box
		padding: 10px 20px
		border: 2px solid #b7b7b7
		-webkit-border-radius: 6px
		border-radius: 6px
		font: italic 16px "Libre Baskerville", serif
		color: rgba(255,255,255,1)
		text-align: right
		-o-text-overflow: clip
		text-overflow: clip
		background: rgba(5,4,4,1)
		-webkit-box-shadow: 2px 2px 2px 0 rgba(0,0,0,0.2) inset
		box-shadow: 2px 2px 2px 0 rgba(0,0,0,0.2) inset
		text-shadow: 0 1px 0 rgba(255,255,255,0.66) 
		-webkit-transition: all 200ms cubic-bezier(0.42, 0, 0.58, 1)
		-moz-transition: all 200ms cubic-bezier(0.42, 0, 0.58, 1)
		-o-transition: all 200ms cubic-bezier(0.42, 0, 0.58, 1)
		transition: all 200ms cubic-bezier(0.42, 0, 0.58, 1)
	.cont-contact
		height: $ventana
		&:after
			clear: both
		> div
			min-height: 200px
			float: left
			width: 50%
		.left
			background-color: #fff
			height: 100%
			#map
				position: relative
				width: 100%
				height: 100%
			#line
				// margin-left: 49%
				position: absolute
				z-index: 888
				height: $ventana
				border-top: 677px solid transparent
				border-right: 50px solid black
				border-left: 709px solid transparent
				// border-bottom: 50px solid white
			// #line2
			// 	// margin-left: 49%
			// 	position: absolute
			// 	z-index: 887
			// 	height: $ventana
			// 	border-top: 677px solid transparent
			// 	border-right: 50px solid #c2ad63
			// 	border-left: 700px solid transparent
			// 	// border-bottom: 50px solid white
		.right
			height: 100%
			color: #fff
			font: italic 15px 'Libre Baskerville'
			padding-left: 15%
			height: 100%
			// width: 50px
			// display: inline-block
			right:1px
			
			
	@media screen and (max-width: 600px)
		.cont-contact
			> div
				float: none
				width: 100%
			.left
				#map
					width: 100%
					// height: 70%
				#line
					border: none
				#line2
					border: none