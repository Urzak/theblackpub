$ventana = calc(100vh - 103px)
#contact
	.input-css
		display: inline-block
		-webkit-box-sizing: content-box
		-moz-box-sizing: content-box
		box-sizing: content-box
		margin-top: 10px
		padding: 15px 20px 10px 20px
		border: 2px solid #b7b7b7
		-webkit-border-radius: 6px
		border-radius: 6px
		font: italic 16px "Libre Baskerville", serif
		color: rgba(255,255,255,1)
		text-align: right
		-o-text-overflow: clip
		text-overflow: clip
		background: rgba(5,4,4,1)
		-webkit-box-shadow: 2px 2px 2px 0 rgba(0,0,0,0.2) inset
		box-shadow: 2px 2px 2px 0 rgba(0,0,0,0.2) inset
		text-shadow: 0 1px 0 rgba(255,255,255,0.66) 
		-webkit-transition: all 200ms cubic-bezier(0.42, 0, 0.58, 1)
		-moz-transition: all 200ms cubic-bezier(0.42, 0, 0.58, 1)
		-o-transition: all 200ms cubic-bezier(0.42, 0, 0.58, 1)
		transition: all 200ms cubic-bezier(0.42, 0, 0.58, 1)	 
	.cont-contact
		height: $ventana
		&:after
			clear: both
		> div
			min-height: 200px
			float: left
			width: 50%
		.left
			background-color: #fff
			height: 100%
			#map
				position: relative
				width: 100%
				height: 100%
			#line
				margin-left: 46.6%
				position: absolute
				z-index: 888
				height: $ventana
				width: 10px;  
				background: #c2ad63;
				-webkit-transform: skew(-8deg);
				-moz-transform: skew(-8deg);
				-ms-transform: skew(-8deg);
				-o-transform: skew(-8deg);
				transform: skew(-8deg);
			#line2
				margin-left: 46.7%
				position: absolute
				z-index: 887
				height: $ventana
				width: 100px; 
				background: #000;
				-webkit-transform: skew(-8deg);
				-moz-transform: skew(-8deg);
				-ms-transform: skew(-8deg);
				-o-transform: skew(-8deg);
				transform: skew(-8deg);
				
		.right
			height: 100%
			color: #fff
			font: italic 15px 'Libre Baskerville'
			right:1px
			// padding-left: 15%
			#centrado
				display: table
				margin: 20px auto
				// background-color: red
			#boton
				border-radius: 6px
				color: black
				float: right
				
			
			
	@media screen and (max-width: 600px)
		.cont-contact
			> div
				float: none
				width: 100%
			.left
				#map
					width: 100%
				#line
					background: none
					border: none
					-webkit-transform: none
					-moz-transform: none
					-ms-transform: none
					-o-transform: none
					transform: none
				#line2
					background: none
					border: none
					-webkit-transform: none
					-moz-transform: none
					-ms-transform: none
					-o-transform: none
					transform: none