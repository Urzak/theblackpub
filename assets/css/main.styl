// BREAKPOINTS
body
	margin 0
	background-color black !important
	font-family: 'Libre Baskerville', serif;
	font-weight 400
	line-height normal	
	color white
	
media_queries = {
	mobile  : "only screen and (max-width: 544px)",
	tablet  : "only screen and (min-width: 545px) and (max-width: 767px)",
	desktop : "only screen and (min-width: 768px) and (max-width: 991px)",
	large: "only screen and (min-width:  992px)"
}

for_breakpoint(breakpoints)
	conditions = ()
	for breakpoint in breakpoints
		push(conditions, media_queries[breakpoint])
	conditions = join(", ", conditions)
	@media conditions
		{block}

