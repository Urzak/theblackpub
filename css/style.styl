@import 'https://fonts.googleapis.com/css?family=Libre+Baskerville:400,400i'
*
	margin: 0
	padding: 0
	-moz-box-sizing: border-box
	-webkit-box-sizing: border-box
	box-sizing: border-box
   
body
	margin: 0
	background-color: #000
	font-family: 'Libre Baskerville', serif;

#menu-wrapper
#nav
	background-image: url("../img/brickwall.jpg")
	height: 115px
	background-color: #373737
	overflow: hidden
	letter-spacing: -10px
	ul
		margin: 4
		padding: 0px 0px 0px 0px
		list-style: none
		line-height: normal
		text-align: center
	li
		display: inline-block
	a
		display: block
		letter-spacing: 1px
		padding: 0px 20px
		text-decoration: none
		text-align: center
		text-transform: capitalize
		font-size: 1em
		line-height: 110px
		border: none
		color: #FFF
		&:hover
			&:not(.active)
				opacity: 0.5
				-webkit-filter: brightness(125%)
		&.active
			text-decoration: underline
			// border-bottom: 3px solid #A07B3B
				
.content
	height: 80%

.container
	&:after
		clear: both
	> div
		min-height: 200px
		float: left
		width: 49%
	.left
		background-color: #fff
		#map
			position: absolute
			width: 49%
			height: 85%
	.right
		background-color: #000
		width: 49%
		color: #fff
		font: italic 15px 'Libre Baskerville'
		padding-left: 15%

#fixed-area
	position: fixed
	bottom: 35%
	right: 0px
	width: 30px
	height: auto
	z-index: 50
	border-radius: 7px
	-webkit-border-radius: 7px
	background-color: #c2ad63
	img
		// width: 25px
		display: block
		margin-left: auto
		margin-right: auto
		padding-top: 10px
		padding-bottom: 10px
		&:hover
			-webkit-transform: rotate(15deg) scale(1.4);
			transform: rotate(15deg) scale(1.4);
			-webkit-transition: .3s ease-in-out;
			transition: .3s ease-in-out;

#fixed-area2
	position: fixed
	width: 6.5%
	left: 10%
	top: 0px
	z-index: 50
	
	
@media screen and (max-width: 600px)
	.container
		> div
			float: none
			width: 100%
		.left
			#map
				width: 100%
				height: 70%
		
.input-css
	display: inline-block
	-webkit-box-sizing: content-box
	-moz-box-sizing: content-box
	box-sizing: content-box
	padding: 10px 20px
	border: 2px solid #b7b7b7
	-webkit-border-radius: 6px
	border-radius: 6px
	font: italic 16px "Libre Baskerville", serif
	color: rgba(255,255,255,1)
	text-align: right
	-o-text-overflow: clip
	text-overflow: clip
	background: rgba(5,4,4,1)
	-webkit-box-shadow: 2px 2px 2px 0 rgba(0,0,0,0.2) inset
	box-shadow: 2px 2px 2px 0 rgba(0,0,0,0.2) inset
	text-shadow: 0 1px 0 rgba(255,255,255,0.66) 
	-webkit-transition: all 200ms cubic-bezier(0.42, 0, 0.58, 1)
	-moz-transition: all 200ms cubic-bezier(0.42, 0, 0.58, 1)
	-o-transition: all 200ms cubic-bezier(0.42, 0, 0.58, 1)
	transition: all 200ms cubic-bezier(0.42, 0, 0.58, 1)