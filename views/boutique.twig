{% include 'index.twig' with {'var': 'boutique'} %}
{% block styles %}
	<link rel="stylesheet" href="bower_components/justifiedGallery/dist/css/justifiedGallery.css"/>
{% endblock %}
{% block content %}
	<div id="boutique">
		<div class="boutiquegallery">
			<div><img src="assets/img/boutique/001.jpg"></div>
			<div><img src="assets/img/boutique/002.jpg"></div>
			<div><img src="assets/img/boutique/003.jpg"></div>
			<div><img src="assets/img/boutique/004.jpg"></div>
			<div><img src="assets/img/boutique/005.jpg"></div>
			<div><img src="assets/img/boutique/006.jpg"></div>
		</div>
	</div>
{% endblock %}
{% block scripts %}
	<script src="bower_components/justifiedGallery/src/js/justifiedGallery.js"></script>
	<script>

		$(".boutiquegallery").justifiedGallery({
			rowHeight: 200,
			lastRow: 'nojustify',
			margins: 5,
			border: 70,
			captions: true
		});
	</script>
{% endblock %}