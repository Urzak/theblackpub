        <div id="line"></div>
        <div id="line2"></div>
        <div id="map"></div>
      </div>
      <div class="right">
        <div id="centrado">
          Make your reservation
          <form style="width: 100%" id="reserve-day" method="post" action="views/mailto.php">
            <input class="input-css" type="date" id="date" name="date">
            <br><select class="input-css" id="hour" name="hour">
              <option>6:00 p.m.</option>
              <option>6:30 p.m.</option>
              <option>7:00 p.m.</option>
