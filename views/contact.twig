      <div class="llegar">
        <a href="https://goo.gl/maps/APBwcDGds4K2">Get directions</a>
      </div>
			</div>
		</div>
	</div>
{% endblock %}

{% block scripts %}
  <script src="assets/js/jquery-2.2.1.min.js"></script>
  <script>
    $(document).ready(function(){
      $("#reserve-day").on('submit', function(){
        var that = $(this),
        url = that.attr('action'),
        type = that.attr('method'),
        data = {};
        that.find('[name]').each(function(index,value){
          var that = $(this),
          name = that.attr('name'),
          value=that.val();
          data[name]=value;
        });
        $.ajax({
          url:url,
          type:type,
          data:data,
          success:function(response){
            console.log(response);
          }
        });
        return false;
      });
    });
  </script>
	<script>
      function initMap() {
        var myLatLng = {lat: 21.149254244661698, lng: -86.82002848704722};

        // Create a map object and specify the DOM element for display.
        var map = new google.maps.Map(document.getElementById('map'), {
          center: myLatLng,
          scrollwheel: false,
          zoom: 18
        });

        // Create a marker and set its position.
        var imagen = {
        	url: 'assets/img/PIN.svg',
        	size: new google.maps.Size(30, 30),
        	anchor: new google.maps.Point(10,35)
        }
        var marker = new google.maps.Marker({
          map: map,
          position: myLatLng,
          title: 'The Black Pub',
          icon: imagen
        });
      }

    </script>
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyC3G6xUBUjX4zKAZKSUuvsOrnIyVWG-idE&callback=initMap"
        async defer></script>
{% endblock %}