{% include 'index.twig' with {'var': 'events'} %}
{% block content %}
<div id="events">
	<div class="row" style="margin: 70px 70px 70px 70px;">
		<div id="expandme1" class="col-lg-2 border" style="background-color: white; color: black">MONDAY</div>
		<div id="expandme2" class="col-lg-2 border" style="background-color: black">TUESDAY</div>
		<div id="expandme3" class="col-lg-2 border" style="background-color: white; color: black">WEDNESDAY</div>
		<div id="expandme4" class="col-lg-2 border" style="background-color: black">THURSDAY</div>
		<div id="expandme5" class="col-lg-2 border" style="background-color: white; color: black">FRIDAY</div>
		<div id="expandme6" class="col-lg-2 border" style="background-color: black">SATURDAY</div>
	</div>
	<div id="hola" style="background: #EEE; border: 1px solid #900; height: 135px; margin: 70px 70px 70px 70px;">MONDAY</div>
</div>
{% endblock %}
{% block scripts %}
	<script>
		$('#hola').hide();
		$('#expandme1').mouseenter(function(){
			$('#hola').show('slide');
		}).mouseleave(function(){
			$('#hola').hide();
		});
	</script>
{% endblock %}